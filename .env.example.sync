# Employee Microservice Sync Configuration
# Add these variables to your .env file

# External Employee Microservice API URL
EMPLOYEE_MICROSERVICE_URL=https://your-employee-microservice.com/api

# API Authentication Token for accessing external microservice
EMPLOYEE_MICROSERVICE_TOKEN=your-api-token-here

# Request timeout in seconds (optional, defaults to 30)
EMPLOYEE_MICROSERVICE_TIMEOUT=30

# Sync interval in seconds (optional, defaults to 3600 = 1 hour)
EMPLOYEE_SYNC_INTERVAL=3600

# Number of retry attempts for failed syncs (optional, defaults to 3)
EMPLOYEE_SYNC_RETRY_ATTEMPTS=3

# Webhook secret for validating incoming requests (optional but recommended)
EMPLOYEE_WEBHOOK_SECRET=your-webhook-secret-here
