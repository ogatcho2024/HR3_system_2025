# ==============================================================================
# PAYROLL SYSTEM INTEGRATION - Environment Variables
# ==============================================================================
# Add these variables to your .env file

# Payroll API Endpoint (full URL including /api/payroll/timesheets/import.php)
PAYROLL_API_ENDPOINT=https://hr4.cranecali-ms.com/api/payroll/timesheets/import.php

# API Key for authentication (X-API-KEY header)
PAYROLL_API_KEY=your-shared-api-key-here

# API Secret for HMAC-SHA256 payload signing
PAYROLL_API_SECRET=your-shared-secret-key-here

# HTTP request timeout in seconds (default: 30)
PAYROLL_TIMEOUT=30

# Number of retry attempts on failure (default: 3)
PAYROLL_RETRIES=3

# Delay between retries in milliseconds (default: 100)
PAYROLL_RETRY_DELAY=100

# Source system identifier sent in payload (default: HumanResources3)
PAYROLL_SOURCE_SYSTEM=HumanResources3

# Enable/disable payroll sync globally (default: true)
PAYROLL_SYNC_ENABLED=true

# ==============================================================================
# QUEUE CONFIGURATION (for async job processing)
# ==============================================================================
# Make sure your queue is configured properly

# Queue driver (database, redis, sync, etc.)
QUEUE_CONNECTION=database

# ==============================================================================
# USAGE EXAMPLE
# ==============================================================================
# For local testing, you can use:
# PAYROLL_API_ENDPOINT=http://localhost:8001/api/payroll/timesheets/import.php
# PAYROLL_API_KEY=test-api-key-12345
# PAYROLL_API_SECRET=test-secret-key-67890
